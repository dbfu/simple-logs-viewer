<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/log.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <title>logs</title>
  <style>
    td,
    th {
      padding: 10px 20px !important;
    }

    .input-box {
      padding: 10px 10px;
      width: 300px;
    }
  </style>
</head>

<body>
  <div class="input-box">
    <input type="email" placeholder="搜索..." class="form-control small">
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">文件名</th>
        <th scope="col">修改日期</th>
        <th scope="col">大小</th>
      </tr>
    </thead>
    <tbody>
      <% files.forEach(function(item) { %>
        <tr>
          <td><a target="_blank" href='/<%= item.name %>'>
              <%= item.name %>
            </a></td>
          <td>
            <%= item.formatMtime %>
          </td>
          <td>
            <%= item.formatSize %>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <script>
    const files = <%- JSON.stringify(files) %>;

    const tbody = document.querySelector('table tbody');

    function createTr(row) {
      const tr = document.createElement('tr');
      tr.innerHTML = `
        <td>
          <a target="_blank" href='/${row.name}'>${row.name}</a>
        </td>
        <td>${row.formatMtime}</td>
        <td>${row.formatSize}</td>
        `;
      return tr;
    }


    // 监听输入框值改变
    document.querySelector('input').addEventListener('input', (e) => {
      tbody.innerHTML = '';
      files
        .filter(o => o.name.includes(e.target.value))
        .forEach(f => {
          const tr = createTr(f);
          tbody.appendChild(tr);
        })
    })
  </script>
</body>

</html>